<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Simple Blog</h1>
    <a href="/new">Create New Post</a>
    <ul>
        <% posts.forEach((post, index) => { %>
            <li>
                <a href="/post/<%= index %>"><%= post.title %></a>
            </li>
        <% }); %>
    </ul>
</body>
</html>
